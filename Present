  <script>
    // ===== PRICING DATA (your packages) =====
    const PRICING_DATA = [
      {
        name: "BM3 Package",
        price: 199,
        per: "/month",
        badge: "Starter",
        featured: true,
        desc: "BM3 with $50 daily spend limit, 3 ad accounts",
