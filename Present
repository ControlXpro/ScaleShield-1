          "1 agency ad account",
          "Unlimited replacements",
          "24/7 support"
        ]
      },
      {
        name: "Dual Agency Ad Accounts",
        price: 850,
        per: "/month",
        badge: "Teams",
        featured: false,
        desc: "24/7 support and unlimited replacements",
        bullets: [
          "2 agency ad accounts",
          "Unlimited replacements",
          "Ideal for teams running multiple offers",
          "24/7 support"
        ]
      },
      {
        name: "Top Agency Package",
        price: 1950,
        per: "/month",
        badge: "Aggressive scaling",
        featured: false,
        desc: "24/7 support and unlimited replacements",
        bullets: [
          "Premium agency access",
          "Best for aggressive scaling operations",
          "Unlimited replacements",
          "24/7 support"
        ]
      },
      {
        name: "Facebook Ad Account Unban",
        price: 1800,
        per: "one-time fee",
        badge: "Case service",
        featured: false,
        desc: "Case review + support workflow",
        bullets: [
          "Works best with complete info",
          "We’ll confirm feasibility first",
          "Clear support workflow"
        ]
      },
      {
        name: "Facebook Profile Unban",
        price: 4000,
        per: "one-time fee",
        badge: "High value",
        featured: false,
        desc: "Case review + escalation workflow",
        bullets: [
          "Best for high-value operators",
          "Fast response + clear steps",
          "Escalation workflow"
        ]
      }
    ];

    // Build pricing cards
    const pricingGrid = document.getElementById("pricingGrid");
    const checkSVG = `
      <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M20 6L9 17l-5-5" stroke="rgba(255,255,255,.92)" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    `;
    PRICING_DATA.forEach((p, i) => {
      const div = document.createElement("div");
      div.className = "priceCard" + (p.featured ? " featured" : "");
      div.innerHTML = `
        <div class="priceTop">
          <div>
            <p class="priceName">${p.name}</p>
            <div class="price">$${p.price}<span class="per">${p.per}</span></div>
          </div>
          <span class="badge">${p.badge}</span>
        </div>
        <p class="desc">${p.desc}</p>
        <ul class="ul">
          ${p.bullets.map(b => `<li class="li"><span class="check">${checkSVG}</span><span>${b}</span></li>`).join("")}
        </ul>
        <a class="btn ${p.featured ? "btnPrimary" : ""}" href="https://t.me/scaleshieldsupport" target="_blank" rel="noopener">Start on Telegram</a>
      `;
      pricingGrid.appendChild(div);
    });

    // Reveal on scroll
    const io = new IntersectionObserver((entries) => {
      entries.forEach(e => { if (e.isIntersecting) e.target.classList.add("on"); });
    }, { threshold: 0.16 });
    document.querySelectorAll(".reveal").forEach(el => io.observe(el));

    // Dynamic icon stack rotation
    const slides = Array.from(document.querySelectorAll(".iconSlide"));
    const label = document.getElementById("iconLabel");
    let idx = 0;
    function setSlide(i){
      slides.forEach(s => s.classList.remove("active"));
      slides[i].classList.add("active");
      label.querySelector(".big").textContent = slides[i].dataset.label || "";
      label.querySelector(".small").textContent = slides[i].dataset.desc || "";
    }
    setInterval(() => {
      idx = (idx + 1) % slides.length;
      setSlide(idx);
    }, 2400);

    // Smooth section-to-section wheel scrolling (feels more “presentation”)
    const main = document.getElementById("app");
    let isSnapScrolling = false;

    function getSections(){
      return Array.from(document.querySelectorAll("main section"));
    }
    function scrollToSection(i){
      const secs = getSections();
      const target = secs[Math.max(0, Math.min(secs.length - 1, i))];
      if (!target) return;
      isSnapScrolling = true;
      target.scrollIntoView({ behavior: "smooth", block: "start" });
      setTimeout(() => { isSnapScrolling = false; }, 650);
    }
    function currentSectionIndex(){
      const secs = getSections();
      const top = main.scrollTop;
      let best = 0;
      let bestDist = Infinity;
      secs.forEach((s, i) => {
        const dist = Math.abs(s.offsetTop - top);
        if (dist < bestDist){ bestDist = dist; best = i; }
      });
      return best;
    }

    main.addEventListener("wheel", (e) => {
      if (isSnapScrolling) { e.preventDefault(); return; }
      // ignore tiny touchpad noise
      if (Math.abs(e.deltaY) < 6) return;

      e.preventDefault();
      const dir = e.deltaY > 0 ? 1 : -1;
      const idx = currentSectionIndex();
      scrollToSection(idx + dir);
    }, { passive:false });

    // Background parallax + moving spotlight
    const floaters = Array.from(document.querySelectorAll(".floater"));
    function onScroll(){
      const t = main.scrollTop || 0;

      floaters.forEach((el, i) => {
        const speed = 0.06 + (i * 0.012);
        const rot = (t * 0.01) + (i * 7);
        el.style.transform = `translate3d(0, ${-(t * speed)}px, 0) rotate(${rot}deg)`;
        const o = 0.08 + Math.min(0.08, t / 8000);
        el.style.opacity = o.toFixed(3);
      });

      document.querySelectorAll(".spotlight").forEach((sp, i) => {
        const local = (t + i * 700);
        const sx = 50 + Math.sin(local / 900) * 18;
        const sy = 45 + Math.cos(local / 1100) * 18;
        sp.style.setProperty("--sx", sx + "%");
        sp.style.setProperty("--sy", sy + "%");
      });
    }
    main.addEventListener("scroll", onScroll, { passive:true });
    onScroll();

    // Smooth anchor jumps within main scroller
    document.querySelectorAll('a[href^="#"]').forEach(a => {
      a.addEventListener("click", (ev) => {
        const id = a.getAttribute("href");
        if (!id || id === "#") return;
        const target = document.querySelector(id);
        if (!target) return;
        ev.preventDefault();
        target.scrollIntoView({ behavior: "smooth", block: "start" });
      });
    });

    // Year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Respect reduced motion
    if (window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
      // disable the wheel snap if user prefers reduced motion
      main.removeEventListener("wheel", () => {});
    }
  </script>
</body>
</html>
